{
  "name": "fotober-rd-hub",
  "version": "1.0.0",
  "description": "Fotober R&D AI Video Intelligence Platform - Knowledge Base & Analytics Hub",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=fotober-rd-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name fotober-rd-hub",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply fotober-rd-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply fotober-rd-production",
    "db:console:local": "wrangler d1 execute fotober-rd-production --local",
    "db:console:prod": "wrangler d1 execute fotober-rd-production",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "hono": "^4.11.7",
    "js-yaml": "^4.1.1",
    "openai": "^6.17.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
